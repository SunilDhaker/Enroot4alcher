<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="#ffffff">

    <TextView
        android:id="@+id/chat_date"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="15 jan 2015"
        android:textColor="#000000"
        android:textSize="15dp" />

    <TextView
        android:id="@+id/message_item_left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/chat_imression_right_container"
        android:background="@drawable/message_left3"
        android:gravity="center"
        android:paddingLeft="35dp"
        android:paddingRight="10dp"
        android:text="Hello worrld"
        android:textColor="#000000" />


    <TextView
        android:id="@+id/message_item_right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/chat_imression_right_container"
        android:background="@drawable/message_right3"
        android:paddingRight="35dp"
        android:singleLine="false"
        android:text="Hello world"
        android:textColor="#000000" />

    <RelativeLayout

        android:id="@+id/chat_imression_right_container"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/chat_date"
        android:layout_margin="5dp"
        android:background="@drawable/blue_box">

        <ImageView
            android:id="@+id/chat_impression_right_logo"
            android:layout_width="@dimen/chat_impression_size"
            android:layout_height="@dimen/chat_impression_size"
            android:padding="5dp"
            android:src="@drawable/logo" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/chat_impression_right_logo"

            android:orientation="vertical">

            <TextView
                android:id="@+id/chat_impression_location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/location_grey"
                android:text="Taj Mahal"
                android:textColor="#000000"
                android:textSize="22dp" />

            <TextView
                android:id="@+id/chat_impression_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/chat_impression_right_logo"
                android:paddingLeft="25dp"
                android:text="2 days"
                android:textColor="#000000" />
        </LinearLayout>

        <ImageView
            android:id="@+id/chat_impression_eureka"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:padding="10dp"
            android:src="@drawable/eureka_fill" />

    </RelativeLayout>
</RelativeLayout>