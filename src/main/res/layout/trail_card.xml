<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_width="fill_parent"
    android:layout_height="170dp"
    android:layout_marginBottom="5dp"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:layout_marginTop="5dp">

    <com.balysv.materialripple.MaterialRippleLayout
        android:id="@+id/trail_ripple"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:rippleAlpha="1"
        app:rippleColor="#00bcd4"
        app:rippleFadeDuration="250"
        app:rippleOverlay="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/trail_card_impression_image"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:src="@drawable/logo" />

            <RelativeLayout
                android:id="@+id/trail_card_info_container"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/trail_card_views_counter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:layout_margin="10dp"
                    android:drawableLeft="@drawable/views_grey"
                    android:text=" 102"
                    android:textColor="#727272"
                    android:textSize="10dp" />

                <TextView
                    android:id="@+id/trail_card_time_stamp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentTop="true"
                    android:layout_margin="10dp"
                    android:text=" today"
                    android:textColor="#727272"
                    android:textSize="10dp" />


                <LinearLayout
                    android:id="@+id/location_container_trail_card"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerInParent="true"
                    android:layout_marginLeft="10dp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/location_blue" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/trail_card_location_stamp1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Taj Mahal"
                                android:textColor="#727272"
                                android:textSize="16dp" />

                            <TextView
                                android:id="@+id/trail_card_location_stamp2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Agra"
                                android:textColor="#727272"
                                android:textSize="16dp" />
                        </LinearLayout>
                    </LinearLayout>


                </LinearLayout>

                <ImageView
                    android:id="@+id/divider"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/location_container_trail_card"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="20dp"
                    android:src="@drawable/line" />

                <LinearLayout
                    android:id="@+id/discover_container"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentLeft="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="5dp"
                    android:orientation="horizontal"
                    android:paddingLeft="10dp">

                    <ImageView
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:layout_gravity="center_vertical"
                        android:src="@drawable/eureka_fill" />

                    <TextView
                        android:id="@+id/trail_card_tagged_people"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:singleLine="true"
                        android:text="Kushagra 3+"
                        android:textColor="#727272"
                        android:textSize="12dp" />

                </LinearLayout>


            </RelativeLayout>
        </LinearLayout>
    </com.balysv.materialripple.MaterialRippleLayout>

</android.support.v7.widget.CardView>
