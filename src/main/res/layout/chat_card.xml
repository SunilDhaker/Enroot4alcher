<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.balysv.materialripple.MaterialRippleLayout
        android:id="@+id/chat_ripple"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        app:rippleAlpha="1"
        app:rippleColor="#00bcd4"
        app:rippleFadeDuration="250"
        app:rippleOverlay="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="#ffffff"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/friend_pic"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:src="@drawable/logo" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/spacing"
                android:layout_weight="1"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/friend_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:text="Gautham krishna"
                    android:textColor="#737273"
                    android:textSize="14dp" />

                <TextView
                    android:id="@+id/message"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_below="@+id/friend_name"
                    android:text="Hey wassup?"
                    android:textColor="#737273"
                    android:textSize="12dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/timestamp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentTop="true"
                    android:text="15 mins ago"
                    android:textColor="#737273"
                    android:textSize="12dp" />

                <TextView
                    android:id="@+id/impression_location"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_below="@id/timestamp"
                    android:drawableLeft="@drawable/five"
                    android:gravity="center_vertical"
                    android:text="  Dod iitg"
                    android:textColor="#737273"
                    android:textSize="10dp" />
            </RelativeLayout>
        </LinearLayout>
    </com.balysv.materialripple.MaterialRippleLayout>
</LinearLayout>